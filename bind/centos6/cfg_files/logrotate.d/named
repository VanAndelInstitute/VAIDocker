/var/log/named/named*.log {
        daily
        rotate 7
        su named named
        missingok
        create 0644 named named
        postrotate
                /bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
        /etc/init.d/named reload 2> /dev/null > /dev/null || true
        endscript
}
