mkdir -p /localdisk/data
mountpoint -q /localdisk/data || mount /dev/disk/by-path/pci-0000:00:17.0-ata-2.0-part1 /localdisk/data
mkdir -p /localdisk/data1
mountpoint -q /localdisk/data1 || mount /dev/disk/by-path/pci-0000:00:17.0-ata-3.0-part1 /localdisk/data1
mkdir -p /localdisk/data2
mountpoint -q /localdisk/data2 || mount /dev/disk/by-path/pci-0000:00:17.0-ata-4.0-part1 /localdisk/data2
